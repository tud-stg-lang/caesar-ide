				<pathelement path="${eclipse.home}/plugins/org.eclipse.debug.ui_3.0.0/dtui.jar"/>
				<pathelement path="${eclipse.home}/plugins/org.eclipse.core.expressions_3.0.0/expressions.jar"/>
				<pathelement path="${eclipse.home}/plugins/org.eclipse.core.variables_3.0.0/variables.jar"/>
				<pathelement path="${eclipse.home}/plugins/org.eclipse.ui_3.0.0/ui.jar"/>
				<pathelement path="${eclipse.home}/plugins/org.eclipse.help_3.0.0/help.jar"/>
				<pathelement path="${eclipse.home}/plugins/org.eclipse.swt_3.0.0/ws/${basews}/swt.jar"/>
				<pathelement path="${eclipse.home}/plugins/org.eclipse.swt.win32_3.0.0/ws/${basews}/swt.jar"/>
				<pathelement path="${eclipse.home}/plugins/org.eclipse.swt.win32_3.0.0"/>
				<pathelement path="${eclipse.home}/plugins/org.eclipse.jface_3.0.0/jface.jar"/>
