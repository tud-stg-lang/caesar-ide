				<pathelement path="${eclipse.home}/plugins/org.apache.ant_1.6.1/lib/ant-launcher.jar"/>
				<pathelement path="${eclipse.home}/plugins/org.apache.ant_1.6.1/lib/ant-netrexx.jar"/>
				<pathelement path="${eclipse.home}/plugins/org.apache.ant_1.6.1/lib/ant-nodeps.jar"/>
				<pathelement path="${eclipse.home}/plugins/org.apache.ant_1.6.1/lib/ant-starteam.jar"/>
				<pathelement path="${eclipse.home}/plugins/org.apache.ant_1.6.1/lib/ant-stylebook.jar"/>
				<pathelement path="${eclipse.home}/plugins/org.apache.ant_1.6.1/lib/ant-swing.jar"/>
				<pathelement path="${eclipse.home}/plugins/org.apache.ant_1.6.1/lib/ant-trax.jar"/>
				<pathelement path="${eclipse.home}/plugins/org.apache.ant_1.6.1/lib/ant-vaj.jar"/>
				<pathelement path="${eclipse.home}/plugins/org.apache.ant_1.6.1/lib/ant-weblogic.jar"/>
				<pathelement path="${eclipse.home}/plugins/org.apache.ant_1.6.1/lib/ant-xalan1.jar"/>
				<pathelement path="${eclipse.home}/plugins/org.apache.ant_1.6.1/lib/ant-xalan2.jar"/>
				<pathelement path="${eclipse.home}/plugins/org.apache.ant_1.6.1/lib/ant-xslp.jar"/>
				<pathelement path="${eclipse.home}/plugins/org.eclipse.team.core_3.0.0/team.jar"/>
				<pathelement path="${eclipse.home}/plugins/org.eclipse.jdt.ui_3.0.0/jdt.jar"/>
				<pathelement path="${eclipse.home}/plugins/org.eclipse.search_3.0.0/search.jar"/>
				<pathelement path="${eclipse.home}/plugins/org.eclipse.jdt.launching_3.0.0/launching.jar"/>
				<pathelement path="${eclipse.home}/plugins/org.eclipse.jdt.debug_3.0.0/jdi.jar"/>
				<pathelement path="${eclipse.home}/plugins/org.eclipse.jdt.debug_3.0.0/jdimodel.jar"/>
				<pathelement path="${eclipse.home}/plugins/org.eclipse.jdt.debug_3.0.0/tools.jar"/>
				<pathelement path="${eclipse.home}/plugins/org.eclipse.compare_3.0.0/compare.jar"/>
				<pathelement path="${eclipse.home}/plugins/org.eclipse.ltk.core.refactoring_3.0.0/refcore.jar"/>
				<pathelement path="${eclipse.home}/plugins/org.eclipse.ltk.ui.refactoring_3.0.0/refui.jar"/>
				<pathelement path="caesar-compiler.jar"/>
				<pathelement path="caesar-runtime.jar"/>
				<pathelement path="aspectjtools.jar"/>
				<pathelement path="aspectjrt.jar"/>
				<pathelement path="java-getopt-1.0.9.jar"/>
				<pathelement path="log4j-1.2.8.jar"/>
				<pathelement path="cjbuildtools.jar"/>
			</classpath>
			<src path="src/" />
			<exclude name="**/CaesarElementImageDescriptor.java" />
			<exclude name="**/CaesarOutlineView.java" />
			<exclude name="**/model/*" />
			</javac>
		<!-- Copy necessary resources -->
		<copy todir="${temp.folder}/caesar.jar.bin" failonerror="true">
			<fileset dir="src/" excludes="**/*.java, **/package.htm*"			/>
		</copy>
		<mkdir dir="${build.result.folder}"/>
		<jar jarfile="${build.result.folder}/caesar.jar" basedir="${temp.folder}/caesar.jar.bin"/>
		<delete dir="${temp.folder}/caesar.jar.bin"/>
	</target>

	<target name="caesarsrc.zip" depends="init" unless="caesarsrc.zip">
		<mkdir dir="${build.result.folder}"/>
		<zip zipfile="${build.result.folder}/caesarsrc.zip" filesonly="false" whenempty="skip" update="false">
			<fileset dir="src/" includes="**/*.java"			/>
		</zip>
	</target>

	<target name="build.jars" depends="init" description="Build all the jars for the plug-in: org.caesarj.">
		<available property="caesar.jar" file="${build.result.folder}/caesar.jar"/>
		<antcall target="caesar.jar"/>
	</target>

	<target name="build.sources" depends="init">
		<available property="caesarsrc.zip" file="${build.result.folder}/caesarsrc.zip"/>
		<antcall target="caesarsrc.zip"/>
	</target>

	<target name="gather.bin.parts" depends="init" if="destination.temp.folder">
		<mkdir dir="${destination.temp.folder}/org.caesarj_${caesar.ver}"/>
		<copy todir="${destination.temp.folder}/org.caesarj_${caesar.ver}" failonerror="true">
			<fileset dir="${build.result.folder}" includes="caesar.jar"			/>
		</copy>
		<copy todir="${destination.temp.folder}/org.caesarj_${caesar.ver}" failonerror="true">
			<fileset dir="${basedir}" includes="plugin.xml,about.ini,welcome.xml,html/,toc.xml,caesar-compiler.jar,icons/,aspectjtools.jar,caesar-runtime.jar,cjbuildtools.jar,caesar.jar,log4j-1.2.8.jar,aspectjrt.jar,java-getopt-1.0.9.jar"			/>
		</copy>
	</target>

	<target name="build.zips" depends="init">
	</target>

	<target name="gather.sources" depends="init" if="destination.temp.folder">
		<mkdir dir="${destination.temp.folder}/org.caesarj_${caesar.ver}"/>
		<copy file="${build.result.folder}/caesarsrc.zip" todir="${destination.temp.folder}/org.caesarj_${caesar.ver}" failonerror="false"/>
		<copy todir="${destination.temp.folder}/org.caesarj_${caesar.ver}" failonerror="false">
			<fileset dir="${basedir}" includes="src/,java-getopt-1.0.9.jar,log4j-1.2.8.jar,aspectjrt.jar,aspectjtools.jar,caesar-compiler.jar,caesar-runtime.jar,cjbuildtools.jar,build.properties,plugin.xml,.project,.classpath,icons/,toc.xml,welcome.xml"			/>
		</copy>
	</target>

	<target name="gather.logs" depends="init" if="destination.temp.folder">
		<mkdir dir="${destination.temp.folder}/org.caesarj_${caesar.ver}"/>
		<copy file="${temp.folder}/caesar.jar.bin.log" todir="${destination.temp.folder}/org.caesarj_${caesar.ver}" failonerror="false"/>
	</target>

	<target name="clean" depends="init" description="Clean the plug-in: org.caesarj of all the zips, jars and logs created.">
		<delete file="${build.result.folder}/caesar.jar"/>
		<delete file="${build.result.folder}/caesarsrc.zip"/>
		<delete file="${plugin.destination}/org.caesarj_${caesar.ver}.jar"/>
		<delete file="${plugin.destination}/org.caesarj_${caesar.ver}.zip"/>
		<delete dir="${temp.folder}"/>
	</target>

	<target name="refresh" depends="init" if="eclipse.running" description="Refresh this folder.">
		<eclipse.convertPath fileSystemPath="../org.caesarj.ui" property="resourcePath"/>
		<eclipse.refreshLocal resource="${resourcePath}" depth="infinite"/>
	</target>

	<target name="zip.plugin" depends="init" description="Create a zip containing all the elements for the plug-in: org.caesarj.">
		<delete dir="${temp.folder}"/>
		<mkdir dir="${temp.folder}"/>
		<antcall target="build.jars"/>
		<antcall target="build.sources"/>
		<antcall target="gather.bin.parts">
			<param name="destination.temp.folder" value="${temp.folder}/"/>
		</antcall>
		<antcall target="gather.sources">
			<param name="destination.temp.folder" value="${temp.folder}/"/>
		</antcall>
		<delete>
			<fileset dir="${temp.folder}" includes="**/*.bin.log"			/>
		</delete>
		<zip zipfile="${plugin.destination}/org.caesarj_${caesar.ver}.zip" basedir="${temp.folder}" filesonly="true" whenempty="skip" update="false"/>
		<delete dir="${temp.folder}"/>
	</target>

</project>
