				<pathelement path="${eclipse.home}/plugins/org.eclipse.ui.win32_3.0.0/workbenchwin32.jar"/>
				<pathelement path="${eclipse.home}/plugins/org.eclipse.ui.views_3.0.0/views.jar"/>
				<pathelement path="${eclipse.home}/plugins/org.eclipse.update.core_3.0.0/updatecore.jar"/>
				<pathelement path="${eclipse.home}/plugins/org.eclipse.update.core.win32_3.0.0/updatecore.jar"/>
				<pathelement path="${eclipse.home}/plugins/org.eclipse.update.ui_3.0.0/updateui.jar"/>
				<pathelement path="${eclipse.home}/plugins/org.eclipse.help.base_3.0.0/helpbase.jar"/>
				<pathelement path="${eclipse.home}/plugins/org.apache.lucene_1.3.0/parser.jar"/>
				<pathelement path="${eclipse.home}/plugins/org.apache.lucene_1.3.0/lucene-1.3-final.jar"/>
				<pathelement path="${eclipse.home}/plugins/org.eclipse.help.appserver_3.0.0/appserver.jar"/>
				<pathelement path="${eclipse.home}/plugins/org.eclipse.ui.forms_3.0.0/forms.jar"/>
				<pathelement path="${eclipse.home}/plugins/org.eclipse.ui.editors_3.0.0/editors.jar"/>
				<pathelement path="${eclipse.home}/plugins/org.eclipse.core.filebuffers_3.0.0/filebuffers.jar"/>
				<pathelement path="${eclipse.home}/plugins/org.eclipse.jdt.core_3.0.0/jdtcore.jar"/>
				<pathelement path="${eclipse.home}/plugins/org.apache.ant_1.6.1/lib/ant.jar"/>
				<pathelement path="${eclipse.home}/plugins/org.apache.ant_1.6.1/lib/ant-antlr.jar"/>
				<pathelement path="${eclipse.home}/plugins/org.apache.ant_1.6.1/lib/ant-apache-bsf.jar"/>
				<pathelement path="${eclipse.home}/plugins/org.apache.ant_1.6.1/lib/ant-apache-resolver.jar"/>
				<pathelement path="${eclipse.home}/plugins/org.apache.ant_1.6.1/lib/ant-commons-logging.jar"/>
				<pathelement path="${eclipse.home}/plugins/org.apache.ant_1.6.1/lib/ant-commons-net.jar"/>
				<pathelement path="${eclipse.home}/plugins/org.apache.ant_1.6.1/lib/ant-icontract.jar"/>
				<pathelement path="${eclipse.home}/plugins/org.apache.ant_1.6.1/lib/ant-jai.jar"/>
				<pathelement path="${eclipse.home}/plugins/org.apache.ant_1.6.1/lib/ant-jakarta-bcel.jar"/>
				<pathelement path="${eclipse.home}/plugins/org.apache.ant_1.6.1/lib/ant-jakarta-log4j.jar"/>
