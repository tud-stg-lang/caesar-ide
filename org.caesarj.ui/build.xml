				<pathelement path="${eclipse.home}/plugins/org.apache.ant_1.6.1/lib/ant-jmf.jar"/>
				<pathelement path="${eclipse.home}/plugins/org.apache.ant_1.6.1/lib/ant-jsch.jar"/>
